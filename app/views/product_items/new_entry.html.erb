<div class="content">
  <h1>Log batch entry</h1>
  <% if @product_entry %> 
    <% if @product_entry.errors.any? %>
      <span>Check the fields below:</span>
      <ul>
      <% @product_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
  <% end %>
</div>

<%= form_with(url: product_items_entry_path ) do |form| %>
  <div class="field">
    <%= form.label :quantity, 'Quantidade', class: 'label' %>
    <div class="control">
      <%= form.number_field :quantity, class: 'input', placeholder: 'quantidade' %>
    </div>
  </div>
  <div class="field">
    <%= form.label :warehouse_id, 'Galpao Destino' %>
    <div class="control">
      <div class="select">
        <%= form.collection_select :warehouse_id, @warehouses, :id, :code %>
      </div>
    </div>
  </div>
  <div class="field">
    <%= form.label :product_model_id, 'Produto', class: 'label' %>
    <div class="control">
      <div class="select">
        <%= form.collection_select :product_model_id, @product_models, :id, :name %>
      </div>
    </div>
  </div>
  <%= form.submit 'Save', class: 'button is-primary' %>
<% end %>