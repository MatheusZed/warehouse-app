<div class="content">
  <h1>Registered suppliers</h1>

  <% if @supplier.empty? %>
  No registered supplier
  <% else %>
</div>
<div class="table is-striped">
  <table>
    <tbody>
      <tr>
      <% @supplier.each do |s| %>
        <td><%= link_to(s.fantasy_name, supplier_path(s.id)) %></td>
        <td><%= s.cnpj %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_supplier_path(s.id), id: "edit-#{s.id}" %></td>
        <% end%>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>
